@model IQueryable<Forum.Entities.Models.Question>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_ForumLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Forum Home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Forum Soruları</h2>

        <form method="get" action="/Forum/Search">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Arama..." name="searchTerm" value="@ViewData["searchTerm"]">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Ara</button>
                </div>
            </div>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Kategori</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Oluşturan</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <td><a href="/Forum/QuestionAnswers/@question.ID">@question.Title</a></td>
                        <td>@question.Content</td>
                        <td>@question.Category.CategoryName</td>
                        <td>@question.CreatedDate</td>
                        <td>@question.AppUser.UserName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
